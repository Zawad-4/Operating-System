#include <stdio.h>

struct Process {
    int pid;    // Process ID
    int priority; // Priority
    int bt;     // Burst Time
};

void findHighestPriority(struct Process proc[], int n) {
    int maxPriorityIndex;
    for (int i = 0; i < n; i++) {
        maxPriorityIndex = i;
        for (int j = i + 1; j < n; j++) {
            if (proc[j].priority > proc[maxPriorityIndex].priority) {
                maxPriorityIndex = j;
            }
        }
        if (maxPriorityIndex != i) {
            struct Process temp = proc[i];
            proc[i] = proc[maxPriorityIndex];
            proc[maxPriorityIndex] = temp;
        }
    }
}

void printProcesses(struct Process proc[], int n) {
    printf("Process ID | Priority | Burst Time\n");
    for (int i = 0; i < n; i++) {
        printf("%d\t\t%d\t\t%d\n", proc[i].pid, proc[i].priority, proc[i].bt);
    }
}

int main() {
    struct Process proc[] = {{1, 2, 6}, {2, 3, 8}, {3, 1, 7}, {4, 4, 3}};
    int n = sizeof(proc) / sizeof(proc[0]);

    findHighestPriority(proc, n);
    printProcesses(proc, n);

    return 0;
}
